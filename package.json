{
  "name": "react-tw-layouts",
  "version": "0.0.1",
  "description": "Simple Tailwind-based React layouts",
  "author": "CarlosEGuerraSilva",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --minify",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "type-check": "tsc --noEmit",
    "workflow:ci": "npm run lint && npm run type-check && npm run test:run && npm run build"
  },
  "peerDependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitest/coverage-v8": "^4.0.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.7",
    "jsdom": "^27.0.1",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.2"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CarlosEGuerraSilva/react-tw-layouts.git"
  },
  "bugs": {
    "url": "https://github.com/CarlosEGuerraSilva/react-tw-layouts/issues"
  },
  "homepage": "https://github.com/CarlosEGuerraSilva/react-tw-layouts#readme",
  "keywords": [
    "react",
    "tailwind",
    "layouts",
    "tailwindcss",
    "tailwind4"
  ]
}
